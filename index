<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Today's Transports</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background-color: #f4f4f4; }
    h1 { text-align: center; }
    .event {
      background: #fff;
      margin: 10px auto;
      padding: 15px;
      border-radius: 8px;
      max-width: 600px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    .time { font-weight: bold; }
    .location { margin: 5px 0; }
  </style>
</head>
<body>
  <h1>Today's Transport Schedule</h1>
  <div id="eventList">Loading...</div>

  <script>
    const sheetID = '1V1ZVnX4G1YQeU7Dit4gkONEI8VuRanVQNjWKe2qqnnI';
    const sheetName = 'Transports';
    const apiKey = 'AIzaSyCNdT02rXEuAmr7s5hmkbANkMG9vKwZCCU';
    const url = `https://sheets.googleapis.com/v4/spreadsheets/${sheetID}/values/${sheetName}?key=${apiKey}`;

    fetch(url)
      .then(res => res.json())
      .then(data => {
        const rows = data.values;
        const headers = rows[0];
        const today = new Date().toISOString().split('T')[0];
        const results = rows.slice(1).map(row => {
          const obj = {};
          headers.forEach((h, i) => obj[h] = row[i]);
          return obj;
        });

        const todaysEvents = results.filter(event => {
          const date = event['Date and Time of PICK UP']?.split('T')[0];
          return date === today;
        });

        const eventList = document.getElementById('eventList');
        eventList.innerHTML = '';

        if (todaysEvents.length === 0) {
          eventList.textContent = 'No transports scheduled for today.';
          return;
        }

        todaysEvents.forEach(e => {
          const div = document.createElement('div');
          div.className = 'event';
          div.innerHTML = `
            <div class="time">${new Date(e['Date and Time of PICK UP']).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
            <div class="location"><strong>Pick-up:</strong> ${e['Pick up location'] || 'N/A'}</div>
            <div class="location"><strong>Drop-off:</strong> ${e['Drop off location'] || 'N/A'}</div>
            ${e['Other notes'] ? `<div class="location"><strong>Notes:</strong> ${e['Other notes']}</div>` : ''}
          `;
          eventList.appendChild(div);
        });
      })
      .catch(err => {
        console.error(err);
        document.getElementById('eventList').textContent = 'Failed to load data.';
      });
  </script>
</body>
</html>
